<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/tvStepTwoTitle"
        style="@style/MyStyle.TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/step_two_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_cb_all"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStepTwoTitle">
        <CheckBox
            android:id="@+id/cb_all"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/checkbox_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать все"
            android:textColor="@color/blackText"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_all"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout_cb_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_result">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гуманитарный институт"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Инженерно-строительный институт"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт биомедицинских систем и биотехнологий"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт компьютерных наук и технологий"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт машиностроения, материалов и транспорта"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт передовых производственных технологий"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_7"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт прикладной математики и механики"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_8"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт физики, нанотехнологий и телекоммуникаций"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_9"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт физической культуры, спорта и туризма"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_10"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт энергетики"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <CheckBox
                android:id="@+id/cb_11"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Институт промышленного менеджмента, экономики и торговли"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/cb_11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_result"
        style="@style/MyStyle.ButtonMain"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>