<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/customborder"
        android:text="86%"
        android:textSize="19sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvNameTest"
        app:layout_constraintBottom_toTopOf="@id/line"/>

    <TextView
        android:id="@+id/tvNameTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Фундаментальная информатика и информационные технологии"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="0.7dp"
        android:background="#99000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvStartTest"/>

    <TextView
        android:id="@+id/tvStartTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Институт компьютерных наук и технологий"
        android:textColor="@color/colorStrokeEditText"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>